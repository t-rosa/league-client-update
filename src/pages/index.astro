---
import { Image } from 'astro:assets';
import riot from '@/assets/riot.png';
import lol from '@/assets/lol.png';
import bg from '@/assets/bg.mp4';
---

<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body class="h-full bg-league-background overflow-hidden">
      <div class="absolute inset-0 intro-wrapper">
        <div class="intro bg-riot-red h-full flex justify-center items-center">
          <Image src={riot} alt="riot games logo" class="riot-logo opacity-0"/>
        </div>
      </div>
      <div class="absolute lol-logo-wrapper inset-0 flex justify-center items-center">
          <Image src={lol} alt="league of legends logo" class="lol-logo opacity-0"/>
      </div>
    <div class="absolute lol-bg-wrapper">
        <video id="background-video" class="lol-bg object-cover -z-10 opacity-0" autoplay loop muted poster="https://assets.codepen.io/6093409/river.jpg">
          <source src={bg} type="video/mp4">
        </video>
      </div>
	</body>
</html>

<style>

@keyframes scale-up {
  0% {
    transform: scale(0);
  }
  100% {
   transform: scale(1);
  }
}
.intro {
  animation: scale-up .6s ease-in-out forwards;
}

@keyframes fade-out {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
.intro-wrapper {
  animation: fade-out .8s ease-in-out 1s forwards;
}

@keyframes fade-in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 100;
  }
}
.riot-logo {
  animation: fade-in .5s ease-in-out .5s forwards;
}

.lol-logo {
  animation: fade-in .5s ease-in-out 1.7s forwards;
}

.lol-logo-wrapper {
  animation: fade-out .8s ease-in-out 2.5s forwards;
}

.lol-bg {
  animation: fade-in 3s ease-in-out 2.5s forwards;
}

@keyframes scale-down {
  0% {
    transform: scale(1. 5);
  }
  100% {
    transform: scale(1);
  }
}
.lol-bg-wrapper {
  transform: scale(1.5);
  animation: scale-down .8s ease-in-out 4s forwards;
}
</style>
